<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proto.application" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.proto.application.MainCalculator" >
            <intent-filter>
                <!--<action android:name="android.intent.action.MAIN" />-->
                <action android:name="com.example.proto.application.MAINCALCULATOR" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Numbers" >
            <intent-filter>
                <action android:name="com.example.proto.application.NUMBERS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Settings" >
            <intent-filter>
                <action android:name="com.example.proto.application.SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".InternalStorage" >
            <intent-filter>
                <!--<action android:name="android.intent.action.MAIN" />-->
                <action android:name="com.example.proto.application.INTERNALSTORAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Menu" >
            <intent-filter>
                <!--<action android:name="com.example.proto.application.MENU" />-->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Reading" >
            <intent-filter>
                <action android:name="com.example.proto.application.READING" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SaveToSD" >
            <intent-filter>
                <action android:name="com.example.proto.application.SAVETOSD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

<activity android:name=".Database" >
            <intent-filter>
                <action android:name="com.example.proto.application.DATABASE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
